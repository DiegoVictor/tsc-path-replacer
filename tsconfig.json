{
  "compilerOptions": {
    "target": "es2016",
    "module": "CommonJS",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "outDir": "dist",
    "lib": ["ES2021.String"],
    "sourceMap": true,
    "declaration": true,
    "removeComments": true
  },
  "include": ["./src"],
  "exclude": ["dist"]
}
